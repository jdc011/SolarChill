<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
        android:id="@+id/Pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:onClick="onPause"
        android:text="@string/si_crank_pause"/>

    <TextView
        android:id="@+id/Timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/si_crank_timer"
        android:textSize="20sp"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/Pause"
        android:layout_toRightOf="@+id/Pause"/>

    <TextView
        android:id="@+id/DiffSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/si_crank_diff"
        android:textSize="20sp"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/Timer"
        android:layout_toEndOf="@id/Timer"/>

    <TextView
        android:id="@+id/DiffRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/DiffSetting"
        android:layout_toEndOf="@id/DiffSetting"
        android:gravity="center"
        android:text="@string/si_crank_diff"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/PlayerScoreDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:layout_toEndOf="@+id/DiffRating"
        android:layout_toRightOf="@+id/DiffRating"
        android:gravity="center"
        android:text="@string/si_crank_playerScore"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/SolarScoreDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:layout_toEndOf="@+id/PlayerScoreDisplay"
        android:layout_toRightOf="@+id/PlayerScoreDisplay"
        android:gravity="center"
        android:text="@string/si_crank_solarScore"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/REMOVETHISIncreaseScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/DiffSetting"
        android:text="@string/si_crank_scoreREMOVE"/>

    <Button
        android:id="@+id/REMOVETHISGoToScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="REMOVETHISgoToScore"
        android:text="@string/si_crank_tempREMOVE"
        android:layout_below="@+id/REMOVETHISIncreaseScore"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>